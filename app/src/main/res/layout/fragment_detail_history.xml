<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.history.user.DetailHistoryFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Button Back"
                    android:src="@drawable/arrow_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Detail Peminjaman"
                    android:textColor="@color/Color6"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/btnBack"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/Color8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvAsalPeminjam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/Color6" />

            <TextView
                android:id="@+id/tvAsalPeminjamLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peminjam"
                android:layout_marginTop="12dp"
                android:layout_below="@id/tvAsalPeminjam" />

            <TextView
                android:id="@+id/tvNamaPeminjam"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/Color6"
                android:layout_below="@id/tvAsalPeminjamLabel" />

            <TextView
                android:id="@+id/tvNimNikLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM/NIK"
                android:layout_marginTop="12dp"
                android:layout_below="@id/tvNamaPeminjam" />

            <TextView
                android:id="@+id/tvNimNik"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/Color6"
                android:layout_below="@id/tvNimNikLabel" />

            <TextView
                android:id="@+id/tvNomorTeleponLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor HP"
                android:layout_marginTop="12dp"
                android:layout_below="@id/tvNimNik" />

            <TextView
                android:id="@+id/tvNomorTelepon"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/Color6"
                android:layout_below="@id/tvNomorTeleponLabel" />


            <TextView
                android:id="@+id/tvAcaraLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acara"
                android:layout_marginTop="12dp"
                android:layout_below="@id/tvNomorTelepon" />

            <TextView
                android:id="@+id/tvAcara"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/Color6"
                android:layout_below="@id/tvAcaraLabel"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/tvHariDanTanggalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari &amp; Tanggal"
                android:layout_marginTop="12dp"
                android:layout_below="@id/tvAcara" />

            <TextView
                android:id="@+id/tvTanggalAcara"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/Color6"
                android:layout_below="@id/tvHariDanTanggalLabel"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/tvWaktuLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu"
                android:layout_marginTop="12dp"
                android:layout_below="@id/tvTanggalAcara" />

            <TextView
                android:id="@+id/tvWaktuAcara"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/Color6"
                android:layout_below="@id/tvWaktuLabel"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/tvSuratIzinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surat Izin"
                android:layout_marginTop="12dp"
                android:layout_below="@id/tvWaktuAcara" />

            <ImageButton
                android:id="@+id/btnSuratIzin"
                android:src="@drawable/pdf"
                android:layout_marginTop="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:layout_marginStart="-4dp"
                android:layout_below="@id/tvSuratIzinLabel"
                android:backgroundTint="#00000000" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>